<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MammalActivity">

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press animal to hear it"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="20dp"/>
    <LinearLayout
        android:id="@+id/mainfirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/intro"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/bear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@raw/bear">
        </ImageView>
        <ImageView
            android:id="@+id/wolf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@raw/wolf">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mainsecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mainfirst"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/elephant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@raw/elephant">
        </ImageView>
        <ImageView
            android:id="@+id/lamb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@raw/lamb">
        </ImageView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>